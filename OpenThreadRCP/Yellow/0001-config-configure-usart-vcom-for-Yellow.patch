-// #define SL_UARTDRV_USART_VCOM_RTS_PORT          gpioPortA
-// #define SL_UARTDRV_USART_VCOM_RTS_PIN           3
+// USART0 RTS on PC01
+#define SL_UARTDRV_USART_VCOM_RTS_PORT           gpioPortC
